program api
  command /usr/local/bin/dataplaneapi -f /etc/haproxy/dataplaneapi.hcl
  no option start-on-reload

global
  master-worker
  stats socket /var/run/haproxy.sock user haproxy group haproxy mode 660 level admin expose-fd listeners
  log stdout format raw local0 info

defaults
  mode http
  timeout client 10s
  timeout connect 5s
  timeout server 10s
  timeout http-request 10s
  log global

frontend stats
  bind *:8404
  stats enable
  stats uri /
  stats refresh 10s

frontend leaf
  bind :80
  default_backend leafs

backend leafs
  server s1 127.0.0.1:8081 check
